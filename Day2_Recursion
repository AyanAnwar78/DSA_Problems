1. Print n to 1:-  5,4,3,2,1

#include <iostream>
using namespace std;
void rev(int n){
    if(n==1){
      cout<<1;
      return ;
    }
    cout<<n<<",";
    rev(n-1);
}
int main()
{
    rev(5);
    return 0;
}




2. Factorial :-

#include <iostream>
using namespace std;
int fact(int n){
    if(n==0) return 1;
    return n*fact(n-1);
}
int main()
{
    cout<<fact(5);
    return 0;
}




3. Fibonacci :-

#include <iostream>
using namespace std;
int fibo(int n){
    if(n==0) return 0;
    if(n==1) return 1;
    return fibo(n-1)+fibo(n-2);
}
int main()
{
    cout<<fibo(5);
    return 0;
}




4. check vector is sorted or not :-

#include <iostream>
#include <vector>
using namespace std;

bool isSorted(vector<int>arr,int n){
    if(n==0 || n==1){
        return true;
    }
    if(arr[n-1]>=arr[n-2]){
        return isSorted(arr,n-1);
    }
    return false;
}

// bool isSorted(vector<int>arr,int i,int n){
